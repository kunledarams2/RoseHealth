<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="#222"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Video Call"
        app:titleTextColor="@color/colorWhite"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/remote_video_view"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/local_video_view"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_margin="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView android:id="@+id/timer"
        android:text="00:30"
        android:gravity="center"
        android:textSize="@dimen/font_14"
        android:textColor="#ff0"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout android:id="@+id/buttons_panel"
        app:layout_constraintBottom_toTopOf="@+id/end_btn"
        android:layout_marginBottom="@dimen/size_50"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/new_note_btn"
            android:drawableTop="@drawable/ic_note"
            android:drawablePadding="@dimen/size_10"
            android:padding="10dp"
            android:text="Write Note"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/new_prescription_btn"
            android:drawableTop="@drawable/ic_edit"
            android:drawablePadding="@dimen/size_10"
            android:onClick="writePrescription"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/write_pres"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_12"
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/med_record_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="Medical Record"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_record_white"
            android:drawablePadding="@dimen/size_10"
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <ImageButton android:id="@+id/end_btn"
        android:src="@drawable/ic_call_end_white"
        android:background="@drawable/end_btn_bg"
        android:padding="15dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/speaker_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/speaker_btn"
        android:layout_margin="15dp"
        android:drawableTop="@drawable/ic_volume_up_white"
        android:text="Speaker"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/colorGray"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/transparent"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <Button android:id="@+id/mute_btn"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:text="Mute"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/colorGray"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_mic_off_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="70dp"
        android:layout_height="70dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
