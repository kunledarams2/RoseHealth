<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VideoCallActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/incoming"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:id="@+id/label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Incoming call from Ozioma"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/accept_btn"
            app:layout_constraintTop_toBottomOf="@+id/label"
            android:layout_margin="40dp"
            android:text="Accept"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="19sp"
            android:background="@drawable/rounded_btn_background"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/reject_btn"
            app:layout_constraintTop_toBottomOf="@+id/accept_btn"
            android:layout_margin="40dp"
            android:text="Reject"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="19sp"
            android:background="@drawable/rounded_btn_background"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activeView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Video Call"
            android:background="@android:color/transparent"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/remote_video_view"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button android:id="@+id/new_tip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:drawableTop="@drawable/ic_edit"
            android:elevation="10dp"
            android:textAllCaps="false"
            android:text="Write Note"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/local_video_view"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                android:layout_margin="25dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="120dp"
                android:layout_height="120dp"/>

        <TextView android:id="@+id/timer"
            android:text="00:30"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonPanel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--LinearLayout android:id="@+id/buttonPanel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/speaker_btn"
                android:layout_margin="10dp"
                android:drawableTop="@drawable/ic_volume_up_gray"
                android:text="Speaker"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/colorGray"
                android:padding="10dp"
                android:background="@drawable/circle_gray_border"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <Button android:id="@+id/mute_btn"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:text="Mute"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/colorGray"
                android:padding="10dp"
                android:background="@drawable/circle_gray_border"
                android:drawableTop="@drawable/ic_mic_off_gray"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <Button android:id="@+id/hide_btn"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:text="Hide"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/colorGray"
                android:padding="10dp"
                android:background="@drawable/circle_gray_border"
                android:drawableTop="@drawable/ic_unfold_less"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </LinearLayout-->

        <ImageButton android:id="@+id/end_btn"
            android:src="@drawable/ic_call_end_white"
            android:background="@drawable/end_btn_bg"
            android:padding="15dp"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/speaker_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/speaker_btn"
            android:layout_margin="15dp"
            android:drawableTop="@drawable/ic_volume_up_gray"
            android:text="Speaker"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorGray"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/transparent"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <Button android:id="@+id/mute_btn"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:text="Mute"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/colorGray"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_mic_off_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="70dp"
            android:layout_height="70dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>