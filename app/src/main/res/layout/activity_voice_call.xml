<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VoiceCallActivity">
    <RelativeLayout
        android:id="@+id/incoming"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView android:id="@+id/label"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Incoming call from Ozioma"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/accept_btn"
            android:layout_below="@+id/label"
            android:layout_margin="40dp"
            android:text="Accept"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="19sp"
            android:background="@drawable/rounded_btn_background"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/reject_btn"
            android:layout_below="@+id/accept_btn"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:text="Reject"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:background="@drawable/rounded_btn_background"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activeView"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            app:title="Voice Call"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View android:id="@+id/mask"
            android:background="@color/colorPrimary"
            android:alpha="0.65"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button android:id="@+id/new_note"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/toolbar"
            android:drawableTop="@drawable/ic_edit"
            android:elevation="10dp"
            android:textAllCaps="false"
            android:text="Write Note"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/patient_name"
            android:text="Hello"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/view_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/view_btn"
            android:text="View Medical Information"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_btn_background"
            android:padding="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_margin="10dp"
            android:layout_above="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/timer"
            android:text="00:30"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/buttonPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout android:id="@+id/buttonPanel"
            android:layout_above="@+id/end_btn"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/speaker_btn"
                android:layout_margin="10dp"
                android:drawableTop="@drawable/ic_volume_up_gray"
                android:text="Speaker"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/colorGray"
                android:padding="10dp"
                android:background="@drawable/circle_gray_border"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <Button android:id="@+id/mute_btn"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:text="Mute"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/colorGray"
                android:padding="10dp"
                android:background="@drawable/circle_gray_border"
                android:drawableTop="@drawable/ic_mic_off_gray"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <Button android:id="@+id/hide_btn"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:text="Hide"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/colorGray"
                android:padding="10dp"
                android:background="@drawable/circle_gray_border"
                android:drawableTop="@drawable/ic_unfold_less"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </LinearLayout>

        <TextView android:id="@+id/end_btn"
            android:background="@drawable/rounded_btn_background"
            android:layout_above="@+id/spacer"
            android:layout_margin="40dp"
            android:text="End"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View android:id="@+id/spacer"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>