<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activeView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:title="Voice Call" />

    <View
        android:id="@+id/mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0.65"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/patient_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:gravity="center"
        android:text="Hello"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/customerType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="customerType"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient_name" />

    <TextView
        android:id="@+id/call_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Connecting"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/customerType"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="00:30"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/call_status"
        tools:layout_editor_absoluteX="16dp" />

    <!--<TextView-->
        <!--android:id="@+id/call_status"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="10dp"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/timer"-->
        <!--android:gravity="center"-->
        <!--android:text="connecting ..."-->
        <!--android:textColor="@color/colorWhite"-->
        <!--android:textSize="@dimen/font_14" />-->




    <View android:id="@+id/divider2"
        app:layout_constraintBottom_toTopOf="@+id/med_record_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.33"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/new_note_btn"
        android:drawableTop="@drawable/ic_note"
        android:drawablePadding="@dimen/size_10"
        android:padding="10dp"
        android:text="Write Note"

        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/end_btn"
        app:layout_constraintStart_toEndOf="@+id/med_record_btn"
        app:layout_constraintEnd_toStartOf="@+id/new_prescription_btn"
        android:layout_marginBottom="@dimen/size_50" />

    <TextView
        android:id="@+id/new_prescription_btn"
        android:drawableTop="@drawable/ic_edit"
        android:drawablePadding="@dimen/size_10"
        android:onClick="writePrescription"
        android:padding="10dp"
        android:gravity="center"

        android:text="@string/write_pres"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/end_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider2"
        android:layout_marginBottom="@dimen/size_50" />

    <TextView
        android:id="@+id/med_record_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="48dp"
        android:drawableTop="@drawable/ic_record_white"
        android:drawablePadding="@dimen/size_10"
        android:gravity="center"
        android:padding="10dp"
        android:text="Medical Record"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/end_btn"
        app:layout_constraintStart_toStartOf="parent" />



        <TextView
            android:id="@+id/speaker_btn"
            android:drawableTop="@drawable/ic_volume_down_gray"
            android:drawablePadding="@dimen/size_10"
            android:padding="10dp"
            android:text="Speaker"
            android:textAllCaps="false"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/font_12"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/med_record_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            android:layout_marginBottom="@dimen/size_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View android:id="@+id/divider"
            app:layout_constraintBottom_toTopOf="@+id/med_record_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="1dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mute_btn"
            android:drawableTop="@drawable/ic_mic_off_gray"
            android:drawablePadding="@dimen/size_10"
            android:padding="10dp"
            android:text="Mute"
            android:textAllCaps="false"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/font_12"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_50"
            android:layout_marginBottom="@dimen/size_50"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintBottom_toTopOf="@+id/med_record_btn"
            app:layout_constraintEnd_toEndOf="parent"/>


    <ImageButton
        android:id="@+id/end_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="40dp"
        android:padding="@dimen/size_20"
        android:src="@drawable/ic_call_end_white"
        android:background="@drawable/circle_red"/>

</androidx.constraintlayout.widget.ConstraintLayout>
