<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:background="@drawable/background_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/img"
        android:background="@drawable/circle_black"
        android:layout_centerVertical="true"
        android:text="W"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:src="@drawable/ic_call_black"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView android:id="@+id/caller_id"
        android:text="Sample Caller id"
        android:padding="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/img"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/call_counts"
        android:text="3 Missed Calls"
        android:padding="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/img"
        android:layout_below="@+id/caller_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/call_time"
        android:text="12 min. ago"
        android:padding="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/img"
        android:layout_below="@+id/call_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton android:id="@+id/video_call_btn"
        android:src="@drawable/ic_video_black"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_toStartOf="@+id/voice_call_btn"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton android:id="@+id/voice_call_btn"
        android:src="@drawable/ic_call_black"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_toStartOf="@+id/chat_btn"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton android:id="@+id/chat_btn"
        android:src="@drawable/ic_chat_black"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>