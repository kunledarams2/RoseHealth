<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DoctorsChatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/incoming"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:id="@+id/label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Incoming chat from Ozioma"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/accept_btn"
            app:layout_constraintTop_toBottomOf="@+id/label"
            android:layout_margin="40dp"
            android:text="Accept"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="19sp"
            android:background="@drawable/rounded_btn_background"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/reject_btn"
            app:layout_constraintTop_toBottomOf="@+id/accept_btn"
            android:layout_margin="40dp"
            android:text="Reject"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="19sp"
            android:background="@drawable/rounded_btn_background"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>