<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/background_image"
        android:scaleType="centerCrop"
        android:src="@drawable/login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryTrans"
        android:layout_height="match_parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.auth.Login">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragment.auth.Login">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:text="RoseHealth"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_40"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView android:id="@+id/logo"
                android:layout_marginTop="@dimen/size_40"
                android:visibility="invisible"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/logo_text"
                android:layout_width="@dimen/size_200"
                android:layout_height="wrap_content" />
            <RelativeLayout android:id="@+id/form"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/logo"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_wrapper"
                    android:layout_margin="20dp"
                    android:theme="@style/TremendocTheme.TextInputTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_14"
                        android:textColorHint="@color/colorWhite"
                        android:backgroundTint="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_wrapper"
                    android:layout_below="@+id/email_wrapper"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:theme="@style/TremendocTheme.TextInputTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/password"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:layout_below="@+id/email"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:backgroundTint="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button android:id="@+id/forgot_password_btn"
                    android:text="Forgot Password"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:layout_marginTop="-15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/password_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <Button android:id="@+id/login_btn"
                    android:layout_below="@+id/forgot_password_btn"
                    android:text="Login"
                    android:layout_marginTop="@dimen/size_40"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:background="@drawable/login_btn_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


            <TextView android:id="@+id/terms"
                android:text="By Signing up you are agreeing to the Terms of Service and Privacy Policy"
                android:textSize="@dimen/font_12"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@+id/form"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginStart="@dimen/size_40"
                android:layout_marginEnd="@dimen/size_40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>

</RelativeLayout>

