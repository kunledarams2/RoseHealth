<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Health Tips"
        app:titleTextColor="#fff"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <RelativeLayout
            android:layout_margin="10dp"
            android:background="@drawable/background_white"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:id="@+id/tip_image"
                android:src="@drawable/water"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
            <TextView android:id="@+id/tip_content"
                android:textSize="16sp"
                android:padding="10dp"
                android:lineSpacingMultiplier="1.2"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque ut risus eget libero finibus facilisis. Phasellus tempus hendrerit sem ut tempus sem \n Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque ut risus eget libero finibus facilisis. Phasellus tempus hendrerit sem ut tempus sem"
                android:layout_below="@+id/tip_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View android:id="@+id/divider"
                android:layout_below="@+id/tip_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView android:id="@+id/view_comments"
                android:text="View Comments"
                android:padding="10dp"
                android:layout_below="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/like_btn"
                android:text="Like"
                android:textColor="#f88"
                android:layout_below="@+id/divider"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:layout_toStartOf="@+id/share_btn"
                android:drawableStart="@drawable/ic_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/share_btn"
                android:text="Share"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/divider"
                android:drawableStart="@drawable/ic_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText android:id="@+id/comment_field"
                android:layout_below="@+id/share_btn"
                android:background="@drawable/input_background_rounded"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <ImageButton android:id="@+id/save_btn"
                android:background="@drawable/circle_white"
                android:src="@drawable/ic_arrow_forward"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/share_btn"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

