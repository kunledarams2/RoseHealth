<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.appointments.AppointmentSchedule">

    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="Schedule Appointment"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            app:titleTextColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView android:id="@+id/image"
            android:layout_below="@+id/toolbar"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/appointment_image"
            android:layout_width="match_parent"
            android:layout_height="160dp" />
        <TextView android:id="@+id/mask"
            android:alpha="0.7"
            android:layout_below="@+id/toolbar"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="160dp" />

        <TextView android:id="@+id/year"
            android:text="2019"
            android:textSize="@dimen/font_18"
            android:padding="20dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/month"
            android:text="Oct"
            android:textSize="40sp"
            android:padding="20dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="65dp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendar"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:mcv_showOtherDates="all"
            app:mcv_selectionColor="#333"
            android:layout_below="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>