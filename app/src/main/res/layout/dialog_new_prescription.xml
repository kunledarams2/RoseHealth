<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="New Prescription"
            app:titleTextColor="#fff"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ProgressBar android:id="@+id/progressBar"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="true"
            android:scaleY="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/symptoms_wrapper"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/medication_field"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/font_14"
                        android:layout_height="match_parent"
                        android:hint="Medication" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/diagnoses_wrapper"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/symptoms_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/dosages_field"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/font_14"
                        android:hint="Dosage e.g 2 times a day" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/treatments_wrapper"
                    android:layout_below="@+id/diagnoses_wrapper"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="50dp">
                    <EditText android:id="@+id/treatment_field"
                        android:hint="@string/treatment"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/font_14"
                        android:layout_height="match_parent" />
                </com.google.android.material.textfield.TextInputLayout>


                <Button android:id="@+id/schedule_btn"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:onClick="clickSavePrescription"
                    android:background="@drawable/rounded_btn_background"
                    android:layout_below="@+id/treatments_wrapper"
                    android:layout_marginTop="@dimen/size_40"
                    android:textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>