<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transparent"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            >

            <RelativeLayout
                android:orientation="horizontal"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:id="@+id/title"
                    android:text="Dashboard"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/clock_image"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <View android:id="@+id/clocking_status_indicator"
                    android:background="@drawable/circle_green"
                    android:layout_toEndOf="@+id/profile_image"
                    android:layout_marginStart="-12dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    />
                <!--<TextView-->
                    <!--android:id="@+id/clockCounter"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="00:00"-->
                    <!--android:textStyle="bold"-->
                    <!--android:layout_marginEnd="40dp"-->
                    <!--android:layout_below="@+id/clock_image"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:textSize="@dimen/font_16"-->
                    <!--android:textColor="#EB0505"-->
                    <!--/>-->

                <!--ImageView android:src="@drawable/logo_text_small"
                    android:layout_marginEnd="80dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" /-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:src="@drawable/ic_account"
                    android:layout_alignLeft="@+id/clock_image"
                    android:layout_marginStart="50dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <View android:id="@+id/online_status_indicator"
                    android:background="@drawable/circle_green"
                    android:layout_toEndOf="@+id/profile_image"
                    android:layout_marginStart="-12dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />



            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>