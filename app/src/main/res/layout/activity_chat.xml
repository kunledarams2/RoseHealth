<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DoctorsChatActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:id="@+id/activeView"
        android:background="@drawable/dash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary"
            app:titleTextColor="@color/colorWhite"
            app:title="Chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout android:id="@+id/active"
            android:orientation="horizontal"
            android:gravity="end"
            android:background="@drawable/background_white"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/view_btn"
                android:text="View Medical Record"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--Button android:id="@+id/join_chatroom"
                android:text="Join Chatroom"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" /-->
            <Button android:id="@+id/write_note"
                android:text="Write Note"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView android:id="@+id/end_session"
            app:layout_constraintTop_toBottomOf="@+id/active"
            android:text="End Sesssion"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="end"
            android:padding="10dp"
            android:drawableEnd="@drawable/ic_close_white"
            android:drawablePadding="20dp"
            android:background="@drawable/background_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            app:layout_constraintTop_toBottomOf="@+id/end_session"
            app:layout_constraintBottom_toTopOf="@+id/holder"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout android:id="@+id/holder"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton android:id="@+id/media_btn"
                android:visibility="gone"
                android:background="@drawable/circle_white"
                android:src="@drawable/ic_add_black"
                android:layout_alignParentStart="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <EditText android:id="@+id/message_field"
                android:background="@drawable/input_background_rounded"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:padding="15dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/send_btn"
                android:layout_width="0dp"
                android:layout_height="50dp" />
            <ImageButton android:id="@+id/send_btn"
                android:background="@drawable/circle_white"
                android:src="@drawable/ic_arrow_forward"
                android:layout_alignParentEnd="true"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/incoming"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:id="@+id/label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Incoming chat from Ozioma"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/accept_btn"
            app:layout_constraintTop_toBottomOf="@+id/label"
            android:layout_margin="40dp"
            android:text="Accept"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="19sp"
            android:background="@drawable/rounded_btn_background"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/reject_btn"
            app:layout_constraintTop_toBottomOf="@+id/accept_btn"
            android:layout_margin="40dp"
            android:text="Reject"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="19sp"
            android:background="@drawable/rounded_btn_background"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>